<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add name="TextWriter" type="System.Diagnostics.TextWriterTraceListener" initializeData="/home/meanbunny/projects/mono_projects/remote/remote/bin/Debug/trace.log" />
        <add name="ConsoleWriter" type="System.Diagnostics.ConsoleTraceListener" />
      </listeners>
    </trace>
  </system.diagnostics>
  <appSettings>
    <!--
    Each default app below supports the following replacement patterns variables
      {Username}
      {Password}
      {Machine}
    -->

    <!-- Linux implementation -->
    <add key="DefaultVNCApp" value="vncviewer" />
    <add key="DefaultVNCAppArguments" value="{Machine}" />

    <add key="DefaultSSHApp" value="gnome-terminal" />
    <add key="DefaultSSHAppArguments" value="-e 'ssh {Username}@{Machine}'" />

    <add key="DefaultRDPApp" value="xfreerdp" />
    <add key="DefaultRDPArguments" value="+clipboard +aero +menu-anims +window-drag /gdi:sw +fonts /sound:sys:pulse /microphone:sys:pulse,format:1,quality:high /w:1500 /h:847 /u:{Username} /p:{Password} /v:{Machine}" />

